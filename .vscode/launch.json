{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug FastAPI",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": ["backend.main:app", "--reload", "--port", "8000"],
      "python": "${workspaceFolder}/backend/.venv/bin/python",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONDONTWRITEBYTECODE": "1"
      },
      "jinja": true
    }
  ]
}